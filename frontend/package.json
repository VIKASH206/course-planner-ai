{
  "name": "course-planner-ai-frontend",
  "version": "1.0.0",
  "description": "AI-Enabled University & Self-Study Course Planner Frontend",
  "scripts": {
    "ng": "ng",
    "s": "ng serve",
    "so": "ng serve --open",
    "serve": "ng serve",
    "serve:open": "ng serve --open",
    "start": "ng serve",
    "start:open": "ng serve --open",
    "start:prod": "ng serve --configuration production",
    "build": "ng build --configuration production",
    "build:dev": "ng build --configuration development",
    "build:prod": "ng build --configuration production",
    "build:vercel": "npm ci && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "ng e2e",
    "pwa:build": "ng build --service-worker",
    "analyze": "ng build --configuration production --named-chunks --source-map && npx webpack-bundle-analyzer dist/course-planner-frontend/stats.json"
  },
  "private": true,
